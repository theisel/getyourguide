{
  "bump-minor-pre-major": true,
  "include-component-in-tag": true,
  "include-v-in-tag": false,
  "tag-separator": "@",
  "pull-request-title-pattern": "chore(release): ${component} ${version} :robot:",
  "pull-request-header": ":robot: release created",
  "group-pull-request-title-pattern": "chore(release): batch release :robot:",
  "plugins": ["node-workspace"],
  "packages": {
    "packages/gyg-wc": {
      "component": "gyg-wc"
    },
    "packages/sanity-plugin-getyourguide": {
      "component": "sanity-plugin-getyourguide"
    }
  }
}
