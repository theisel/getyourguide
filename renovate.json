{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":rebaseStalePrs"],
  "schedule": ["after 9pm and before 3am every weekday"],
  "ignoreDeps": ["node", "pnpm"],
  "automergeStrategy": "squash",
  "major": {
    "dependencyDashboardApproval": true
  },
  "packageRules": [
    {
      "matchFileNames": ["packages/sanity-plugin-getyourguide/package.json"],
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "prCreation": "immediate",
      "groupName": "**sanity-plugin-getyourguide**",
      "groupSlug": "sanity-plugin-getyourguide-dependencies-non-major"
    },
    {
      "matchFileNames": ["packages/sanity-plugin-getyourguide/package.json"],
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["major"],
      "groupName": "**sanity-plugin-getyourguide**",
      "groupSlug": "sanity-plugin-getyourguide-dependencies"
    },
    {
      "matchFileNames": ["packages/gyg-wc/package.json"],
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "groupName": "**gyg-wc**",
      "groupSlug": "gyg-wc-dependencies-non-major"
    },
    {
      "matchFileNames": ["packages/gyg-wc/package.json"],
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["major"],
      "groupName": "**gyg-wc**",
      "groupSlug": "gyg-wc-dependencies"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "prCreation": "immediate",
      "groupName": "**dev**",
      "groupSlug": "dev-dependencies"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major"],
      "groupName": "**dev**",
      "groupSlug": "dev-dependencies-major"
    }
  ]
}
